from flask import Flask, redirect

app = Flask(__name__)

@app.route("/")
def home():
    return """
    <h1>Home Page</h1>
    <p>Welcome to Flask!</p>
    <p>Navigate to:
       <a href='/whatsapp'>WhatsApp</a> |
       <a href='/resume'>Resume</a>
    </p>
    """

@app.route("/whatsapp")
def open_whatsapp():
    return redirect("https://web.whatsapp.com/")

